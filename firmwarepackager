#!/bin/bash

function splash() {
clear
cat << "EOF"

  ___ _            _         _       
 / __| |_ __ _ _ _| |   __ _| |__ ___
 \__ |  _/ _` | '_| |__/ _` | '_ (_-<
 |___/\__\__,_|_| |____\__,_|_.__/__/

EOF
echo "============================================================================"
echo "$1"
echo "============================================================================"
}

date=$(date '+%Y-%m-%d')

splash "Which laptop are you creating an update for?"
select MODEL in "I2" "I3" "L3" "L4"
	do
		break
	done

splash "Which type of update is it?"
select TYPE in "AMI" "Coreboot" "ITE"
	do
		break
	done
echo
read -r -p "What is the version of the update? " VERSION

array=()
while IFS= read -r -p "Enter changes for release notes: " line; do
    [[ $line ]] || break
    array+=("$line")
done

rn=$(printf '* %s\\n' "${array[@]}")
crn=$(printf '\\t\\t<li>%s</li>\\n' "${array[@]}")
ern=$(printf 'echo "%s"\\n' "${array[@]}")


if [[ "$MODEL" == "I2" ]]; then
	name="Star Lite Mk II"
	hwid="80f1fd54-f581-571f-90e6-00bf8a67f627"
	bios="797f8bae-0ea2-4c0f-8a30-7d10ccfacbc0"
	ec="0aa07091-dc02-5e62-a0cd-9d3880721b64"
	s="/P /N"
elif [[ "$MODEL" == "L3" ]]; then
	name="Star LabTop Mk III"
	hwid="e00a0d81-3992-52b2-b569-4195a56065f1"
	bios="8265d473-a6c2-42b4-897b-bc220faa2d32"
	ec="0aa07091-dc02-5e62-a0cd-9d3880721b64"
	s="/P /B /N"
elif [[ "$MODEL" == "L4" ]]; then
	name="Star LabTop Mk IV"
	hwid="baf1d04e-fd16-5e6a-93cc-1c23d171f879"
	bios="502bff68-b8db-4b01-86ef-ab65f6502a77"
	ec="0aa07091-dc02-5e62-a0cd-9d3880721b64"
	s="/P /B /N /L"
elif [[ "$MODEL" == "I3" ]]; then
        name="Star Lite Mk III"
        hwid="d5521faa-c50b-5d64-971d-8fd400030c51"
        bios="d9d7b13b-e4db-4f91-8bf6-8952a9caa82a"
        ec="0aa07091-dc02-5e62-a0cd-9d3880721b64"
        s="/P /N"
fi
TARGET=$(echo "$MODEL/$TYPE/$VERSION")
FILE=$(ls "$VERSION".*)
echo $FILE
function backup() {
  splash "Backing up original files"
  mkdir -p "$TARGET/Original/"
  cp "$FILE" "$TARGET/Original/"
  echo "Done"
}

function metadata() {
  sed -i "s#%MODEL%#$MODEL#g" "$TARGET/CAB/$MODEL.metainfo.xml"
  sed -i "s#%NAME%#$name#g" "$TARGET/CAB/$MODEL.metainfo.xml"
  sed -i "s#%BIOS%#$bios#g" "$TARGET/CAB/$MODEL.metainfo.xml"
  sed -i "s#%EC%#$ec#g" "$TARGET/CAB/$MODEL.metainfo.xml"
  sed -i "s#%HWID%#$hwid#g" "$TARGET/CAB/$MODEL.metainfo.xml"
  sed -i "s#%VERSION%#$VERSION#g" "$TARGET/CAB/$MODEL.metainfo.xml"
  sed -i "s#%DATE%#$date#g" "$TARGET/CAB/$MODEL.metainfo.xml"
  sed -i "s#%RELEASE%#$crn#" "$TARGET/CAB/$MODEL.metainfo.xml"
}

function efi() {
  splash "Creating AMI EFI Shell Update"
  mkdir -p "$TARGET/EFI/"
  cp "MasterFiles/$TYPE.nsh" "$TARGET/EFI/startup.nsh"
  if [[ "$TYPE" == "AMI" ]]; then
    cp "MasterFiles/AfuEfix64.efi" "$TARGET/EFI/"
  elif [[ "$TYPE" == "ITE" ]]; then
    cp "MasterFiles/eFuitX64.efi" "$TARGET/EFI/"
  fi
  cp "$FILE" "$TARGET/EFI/$FILE"

  sed -i "s#%SWITCH%#$s#g" "$TARGET/EFI/startup.nsh"
  sed -i "s#%VERSION%#$VERSION#g" "$TARGET/EFI/startup.nsh"
  sed -i "s#%RELEASE%#$ern#" "$TARGET/EFI/startup.nsh" 
  echo "Creating .zip"
  zip -rj "$TARGET/$MODEL-$VERSION.zip" "$TARGET/EFI/"* &>/dev/null
}

function cab() {
  mkdir -p "$TARGET/CAB/"
  cp "MasterFiles/$TYPE.metainfo.xml" "$TARGET/CAB/$MODEL.metainfo.xml"
  if [[ "$TYPE" == "AMI" ]]; then
    ./header.py --guid "$bios" --bin "$FILE" --cap "$TARGET/CAB/$VERSION.cap"
  elif [[ "$TYPE" == "Coreboot" ]]; then
    cp "$FILE" "$TARGET/CAB/$FILE"
  elif [[ "$TYPE" == "ITE" ]]; then
    cp "$FILE" "$TARGET/CAB/$FILE"
  fi
  metadata
  echo "Creating .cab"
  gcab -cn "$TARGET/$MODEL.cab" "$TARGET/CAB/"*
}

backup
if [[ "$TYPE" == "AMI" ]]; then
  cab
  efi
elif [[ "$TYPE" == "Coreboot" ]]; then
  cab
elif [[ "$TYPE" == "ITE" ]]; then
  cab
  efi
fi

rm $FILE
echo "Updating README"

sed -i "/$name/a $rn" README.md
sed -i "/$name/a \#\#\#\# $TYPE: $VERSION ($date)" README.md


echo "Upload to GitHub?"
select git in "Yes" "No"
  do
    break
  done
if [[ "$git" == 'Yes' ]]; then
  git add *
  git commit -m "Added $name $VERSION"
  git push
fi
