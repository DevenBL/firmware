<component type="firmware">
  <id>com.starlabs.%MODEL%.controller</id>
  <name>%NAME%</name>
  <summary>Embedded Controller Firmware for %NAME%</summary>
  <description>
    <p>Updating the embedded controller for %NAME% makes your computer more reliable and can add new features.</p>
  </description>
  <provides>
    <firmware type="flashed">%EC%</firmware>
  </provides>
  <requires>
    <id compare="ge" version="1.3.9">org.freedesktop.fwupd</id>
    <hardware>%HWID%</hardware>
  </requires>
  <url type="homepage">https://starlabs.systems</url>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>proprietary</project_license>
  <developer_name>Star Labs</developer_name>
  <custom>
    <value key="LVFS::UpdateProtocol">tw.com.ite.superio</value>
    <value key="LVFS::VersionFormat">pair</value>
  </custom>
  <categories><category>X-EmbeddedController</category></categories>
  <releases>
    <release urgency="medium" version="%VERSION%" date="%DATE%">
      <checksum filename="%VERSION%.bin" target="content"/>
      <description>
        <p>This stable release includes the following updates:</p>
        <ul>
          %RELEASE%
        </ul>
      </description>
    </release>
  </releases>
</component>
