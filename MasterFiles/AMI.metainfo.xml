<component type="firmware">
  <id>com.starlabs.%MODEL%.firmware</id>
  <name>%NAME%</name>
  <summary>System BIOS for %NAME%</summary>
  <description>
    <p>Updating the system BIOS for %NAME% makes your computer more reliable and can add new features.</p>
  </description>
  <provides>
    <firmware type="flashed">%BIOS%</firmware>
  </provides>
  <requires>
    <id compare="ge" version="1.3.8">org.freedesktop.fwupd</id>
  </requires>
  <url type="homepage">https://starlabs.systems</url>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>proprietary</project_license>
  <developer_name>Star Labs</developer_name>
  <custom>
    <value key="LVFS::UpdateProtocol">org.uefi.capsule</value>
    <value key="LVFS::VersionFormat">triplet</value>
  </custom>
  <categories>
    <category>X-Device</category>
  </categories>
  <releases>
    <release urgency="medium" version="%VERSION%" date="%DATE%">
      <checksum filename="%VERSION%.cap" target="content"/>
      <description>
        <p>This stable release includes the following features:</p>
        <ul>
          %RELEASE%
        </ul>
      </description>
    </release>
  </releases>
</component>
